<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatdeneme3.ChatScreenController">
    <children>
        <VBox alignment="CENTER" layoutX="20.0" layoutY="14.0" spacing="10.0" AnchorPane.bottomAnchor="26.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="14.0">
            <children>
                <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="MarmaraChat" />
            <Button fx:id="StatusOnline" mnemonicParsing="false" onAction="#handleStatusOnlineButton" text="Çevrim Dışı" />
                <TextArea fx:id="messageArea" editable="false" prefHeight="293.0" prefWidth="478.0" wrapText="true" />
                <HBox spacing="10.0">
                    <TextField fx:id="messageField" promptText="Type your message here..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="sendButton" onAction="#handleSendMessage" text="Send" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
